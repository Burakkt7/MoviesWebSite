@model MoviesWebSite.Models.Movie

@{
    Layout = null;
}



<h4 style=" margin-left:45%; margin-top: 2%;">Film Ekle</h4>

<div>
        <partial name="~/Views/Partials/_UserFavoritePartial.cshtml" />
    </div>
<link href="~/css/site.css" rel="stylesheet" />  
 
<div class="row" style="margin-left:14%">
    <div class="col-md-4">
        
        <form asp-action="Create" asp-controller="Movies" method="post">
            <div class="form-group">
               <br />
                <input asp-for="Name"placeholder="Adı" class="form-control" />
                <span asp-validation-for="Name"  class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">            
                <br />
                <input type="radio" name="MovieCatagories" value="Aksiyon"> Aksiyon<br>
                <input type="radio" name="MovieCatagories" value="Komedi"> Komedi<br>
                <input type="radio" name="MovieCatagories" value="Korku"> Korku<br>
                <input type="radio" name="MovieCatagories" value="Gerilim"> Gerilim<br>
            </div>
            <div class="form-group">
                <br />
                <input asp-for="MovieYazar" placeholder="Yazar" class="form-control" />
                <span asp-validation-for="MovieYazar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input asp-for="MovieIMDB"  placeholder="IMDB" class="form-control" />
                <span asp-validation-for="MovieIMDB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <TextArea asp-for="Hakkında"  placeholder="Kısa Bilgilendirme"class="form-control" ></textarea>
                <span asp-validation-for="Hakkında"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <TextArea asp-for="GenelDetay"  placeholder="Genel Özet" class="form-control" ></textarea>
                <span asp-validation-for="GenelDetay"  class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create"   class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
